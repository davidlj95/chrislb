{
  "name": "chrislb",
  "version": "0.0.0",
  "packageManager": "pnpm@10.15.1",
  "type": "module",
  "private": true,
  "scripts": {
    "ng": "ng",
    "start": "pnpm dlx http-server dist/chrislb/browser -a localhost",
    "start:dev": "ng serve",
    "start:dev:public": "pnpm run start:dev --host 0.0.0.0 --disable-host-check",
    "build": "ng build",
    "watch": "ng build --watch --configuration development",
    "test": "pnpm run /test:*./",
    "test:app:unit": "ng test --no-watch",
    "test:app:lighthouse": "lhci autorun",
    "test:scripts:tsc": "tsc -b scripts",
    "test:scripts:unit": "tsx --test 'scripts/**/*.test.ts'",
    "snapshots:scripts:update": "tsx --test-update-snapshots --test 'scripts/**/*.test.ts'",
    "lint": "ng lint",
    "format:check": "prettier --check",
    "format:check:all": "pnpm run format:check -- .",
    "format": "prettier --ignore-unknown --write",
    "format:all": "pnpm run format -- .",
    "git-hooks": "husky",
    "cms-server": "npx decap-server",
    "analyze-main-bundle": "ng build --source-map && npx source-map-explorer dist/chrislb/browser/main.*.js",
    "scripts:run": "touch .env && tsx --env-file=.env",
    "scripts:all": "pnpm scripts:run scripts/src/all.ts",
    "scripts:misc-images": "pnpm scripts:run scripts/src/misc-images.ts",
    "scripts:projects-content": "pnpm scripts:run scripts/src/projects-content.ts",
    "validate-renovate-config": "npx -p renovate renovate-config-validator"
  },
  "dependencies": {
    "@angular/animations": "20.2.4",
    "@angular/common": "20.2.4",
    "@angular/compiler": "20.2.4",
    "@angular/core": "20.2.4",
    "@angular/forms": "20.2.4",
    "@angular/platform-browser": "20.2.4",
    "@angular/platform-browser-dynamic": "20.2.4",
    "@angular/platform-server": "20.3.0",
    "@angular/router": "20.2.4",
    "@angular/ssr": "20.2.2",
    "@davidlj95/ngx-meta": "20.0.1",
    "@fontsource/fira-sans": "5.2.6",
    "@fortawesome/angular-fontawesome": "2.0.1",
    "@fortawesome/fontawesome-svg-core": "6.7.2",
    "@fortawesome/free-brands-svg-icons": "6.7.2",
    "@fortawesome/free-solid-svg-icons": "6.7.2",
    "@unpic/core": "1.0.2",
    "compression": "1.8.1",
    "express": "5.1.0",
    "gardevoir": "1.0.0",
    "rxjs": "7.8.2",
    "swiper": "11.2.10",
    "tslib": "2.8.1"
  },
  "devDependencies": {
    "@angular/build": "20.2.2",
    "@angular/cli": "20.2.2",
    "@angular/compiler-cli": "20.2.4",
    "@eslint/compat": "1.3.2",
    "@lhci/cli": "0.15.1",
    "@types/compression": "1.8.1",
    "@types/express": "5.0.3",
    "@types/jasmine": "5.1.9",
    "@types/node": "22.18.8",
    "angular-eslint": "20.2.0",
    "cloudinary": "2.7.0",
    "eslint": "9.35.0",
    "eslint-config-prettier": "10.1.8",
    "husky": "9.1.7",
    "imagekit": "6.0.0",
    "jasmine-core": "5.10.0",
    "karma": "6.4.4",
    "karma-chrome-launcher": "3.2.0",
    "karma-coverage": "2.2.1",
    "karma-jasmine": "5.1.0",
    "karma-jasmine-html-reporter": "2.1.0",
    "lint-staged": "16.1.6",
    "ng-mocks": "14.13.5",
    "prettier": "3.6.2",
    "tsx": "4.20.6",
    "typescript": "5.8.3",
    "typescript-eslint": "8.42.0"
  }
}
